<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <data>

        <variable
            name="m"
            type="com.linktech.saihub.entity.lightning.TxEntity" />

        <import type="com.linktech.saihub.util.StringUtils" />

        <import type="com.linktech.saihub.app.StringConstants" />

        <import type="android.text.TextUtils" />

        <import type="java.math.BigDecimal" />

        <import type="com.linktech.saihub.util.DateUtils" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:paddingBottom="@dimen/dp_8">

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/shape_in"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                tools:src="@mipmap/icon_in" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_num"
            style="@style/text_black_num_normal_bold"
            android:textColor="@color/color_FF00C873"
            android:textSize="@dimen/text_18_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="+0.00031" />

        <TextView
            android:id="@+id/tv_memo"
            style="@style/text_black_normal_bold"
            android:layout_width="@dimen/dp_0"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_24"
            android:gravity="start"
            android:singleLine="true"
            android:text="@{m.type.equals(StringConstants.BITCOIND_TX)?@string/on_chain:TextUtils.isEmpty(m.memo)?m.type.equals(StringConstants.PAID_INVOICE)?@string/ln_payment:@string/ln_invoice:m.memo }"
            android:textColor="@color/color_FF090E16"
            app:layout_constraintBottom_toTopOf="@id/tv_time"
            app:layout_constraintEnd_toStartOf="@+id/tv_num"
            app:layout_constraintStart_toEndOf="@+id/ll_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_black_num_normal"
            android:layout_marginTop="@dimen/dp_3"
            android:text="@{DateUtils.getSimpleTimeFormatS(m.time,DateUtils.DATE_FORMAT_20)}"
            android:textColor="@color/color_BF000000"
            android:textSize="@dimen/text_12_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_memo"
            app:layout_constraintTop_toBottomOf="@id/tv_memo"
            app:layout_constraintVertical_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>