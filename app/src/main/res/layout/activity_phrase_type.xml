<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.linktech.saihub.view.sys.TopBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20">

            <TextView
                style="@style/text_black_normal_bold"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingExtra="@dimen/dp_5"
                android:text="@string/phrase_tip_0"
                android:textSize="@dimen/text_24_sp" />

            <TextView
                style="@style/text_black_normal"
                android:layout_marginTop="@dimen/dp_8"
                android:lineSpacingExtra="@dimen/dp_5"
                android:text="@string/phrase_tip_1" />

            <TextView
                style="@style/text_black_normal_bold"
                android:layout_marginTop="@dimen/dp_28"
                android:text="@string/phrase_select_tip" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_12"
                    style="@style/rb_num_style"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_60"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/cb_rb"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    android:text="12"
                    android:textSize="@dimen/text_20_sp" />

                <RadioButton
                    android:id="@+id/rb_24"
                    style="@style/rb_num_style"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginStart="@dimen/dp_25"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/cb_rb"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingEnd="@dimen/dp_16"
                    android:text="24"
                    android:textSize="@dimen/text_20_sp" />

            </RadioGroup>

            <Button
                android:id="@+id/btn_continue"
                style="@style/btn_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginTop="@dimen/dp_88"
                android:background="@drawable/btn_normal"
                android:enabled="false"
                android:text="@string/continue_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_cancel"
                app:layout_constraintTop_toBottomOf="@id/tv_tip" />

        </LinearLayout>

    </LinearLayout>
</layout>