<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_16"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_30"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_15"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/icon_dialog_x" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_black_normal_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/dp_6"
            android:paddingStart="@dimen/dp_24"
            android:paddingEnd="@dimen/dp_24"
            android:text="@string/reset_wallet_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_24_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tip"
            style="@style/text_black_normal"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="@string/reset_wallet_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14_sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/btn_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_36"
            android:background="@drawable/btn_normal"
            android:text="@string/reset"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel"
            app:layout_constraintTop_toBottomOf="@id/tv_tip" />

    </LinearLayout>
</layout>