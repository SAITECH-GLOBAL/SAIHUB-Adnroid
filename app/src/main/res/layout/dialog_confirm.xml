<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_radius_16"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_32"
        android:paddingBottom="@dimen/dp_32"
        tools:ignore="MissingConstraints"
        tools:layout_marginEnd="@dimen/dp_40"
        tools:layout_marginStart="@dimen/dp_40">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/dialog_delete_confirm_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_24_sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_20"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="@string/dialog_delete_confirm_hint"
            android:textColor="#ff000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_cancel"
                style="@style/btn_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_21"
                android:layout_weight="1"
                android:background="@drawable/shape_bt_str_005f6f_radius_26"
                android:gravity="center"
                android:text="@string/no"
                android:textColor="@color/color_FF005F6F" />

            <TextView
                android:id="@+id/tv_confirm"
                style="@style/btn_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_normal"
                android:gravity="center"
                android:text="@string/yes"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_20"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/backup_recovery_phrase"
            android:textColor="@color/color_FF005F6F"
            android:textSize="14sp" />

    </LinearLayout>
</layout>