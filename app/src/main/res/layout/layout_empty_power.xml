<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_poll_empty"
    android:paddingBottom="@dimen/dp_24"
    android:paddingEnd="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_24">


    <ImageView
        android:id="@+id/iv_power_logo"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/icon_main_power_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_power_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/add_a_power"
        android:textColor="@color/color_FF090E16"
        android:textSize="@dimen/text_24_sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_power_logo"
        app:layout_constraintStart_toEndOf="@+id/iv_power_logo"
        app:layout_constraintTop_toTopOf="@+id/iv_power_logo" />

    <TextView
        android:id="@+id/tv_power_hint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/power_empty_hint"
        android:textColor="@color/color_FF686F7C"
        android:textSize="@dimen/text_14_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_power_hint" />

    <TextView
        android:id="@+id/tv_add_power"
        style="@style/btn_normal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/btn_normal"
        android:drawablePadding="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:text="@string/add_wallet_now"
        app:drawableStartCompat="@mipmap/icon_add_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_power_hint2" />

</androidx.constraintlayout.widget.ConstraintLayout>
