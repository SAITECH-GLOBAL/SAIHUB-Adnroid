<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.poll.PoolAddActivity">

        <com.linktech.saihub.view.sys.TopBar
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            app:title_text="@string/app_version" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@mipmap/icon_app_version_sai_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/saihubapp"
            android:textColor="@color/color_FF686F7C"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/tv_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/current_version_number"
            android:textColor="@color/color_FF686F7C"
            android:textSize="@dimen/text_12_sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="@dimen/dp_164"
            android:layout_height="@dimen/dp_52"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_44"
            android:background="@drawable/shape_bg_green_radius_32"
            android:gravity="center"
            android:text="@string/check_update"
            android:textColor="#ff005f6f"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>


</layout>