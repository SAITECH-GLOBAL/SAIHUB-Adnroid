<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_base"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_78"
    android:layout_marginBottom="@dimen/dp_16"
    android:background="@drawable/shape_bg_address_book_empty"
    android:gravity="center">


    <TextView
        android:id="@+id/tv_add_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_5"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/btn_wallet_add"
        android:textColor="@color/color_FFA8ACB0"
        android:textSize="@dimen/text_12_sp"
        app:drawableStartCompat="@mipmap/icon_add_gray" />

</LinearLayout>
