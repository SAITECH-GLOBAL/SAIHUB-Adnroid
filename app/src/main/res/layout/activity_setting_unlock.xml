<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.poll.PoolAddActivity">

        <com.linktech.saihub.view.sys.TopBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            app:title_text="@string/unlock_setting" />

        <LinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/shape_bg_gray_radius_8"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_unlock_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_weight="1"
                android:text="@string/unlocked_password"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sv_pwd"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@mipmap/icon_switch_open"
                app:primaryColor="@color/color_FF32D74B" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_touch_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/shape_bg_gray_radius_8"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_touch_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_weight="1"
                android:text="@string/touch_id"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/sv_touch_id"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@mipmap/icon_switch_open"
                app:primaryColor="@color/color_FF32D74B" />
        </LinearLayout>

    </LinearLayout>


</layout>