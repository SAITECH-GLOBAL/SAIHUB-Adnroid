<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRela"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_strength"
        style="@style/text_black_small"
        android:textColor="@color/color_FFFF3750"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/pwd_weak" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_strength"
        app:layout_constraintStart_toEndOf="@+id/tv_strength"
        app:layout_constraintTop_toTopOf="@+id/tv_strength">

        <View
            android:id="@+id/view_0"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_4"
            android:background="@drawable/shape_strength" />

        <View
            android:id="@+id/view_1"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            android:background="@drawable/shape_strength" />

        <View
            android:id="@+id/view_2"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_4"
            android:layout_marginStart="@dimen/dp_4"
            android:background="@drawable/shape_strength" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
