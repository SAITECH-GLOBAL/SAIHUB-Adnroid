    <!--bottom弹窗动画-->
    <style name="bottom_dialog_anim">
        <!--//进入时的动画-->
        <item name="@android:windowEnterAnimation">@anim/bottom_dialog_show</item>
        <!--//退出时的动画-->
        <item name="@android:windowExitAnimation">@anim/bottom_dialog_dismiss</item>
    </style>

    <!--抽屉弹窗动画-->
    <style name="drawer_dialog_anim">
        <!--//进入时的动画-->
        <item name="@android:windowEnterAnimation">@anim/drawer_dialog_show</item>
        <!--//退出时的动画-->
        <item name="@android:windowExitAnimation">@anim/drawer_dialog_dismiss</item>
    </style>


    <style name="SheetStyle" parent="android:Widget">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">auto</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_skipCollapsed">false</item>
    </style>


    <!--选中的样式，可以设置选择的字体颜色，这里只是为了改变选择时的字体大小-->
    <style name="bottom_tab_title_active">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!--没有选中的样式，导航默认的字体大小就是12sp-->
    <style name="bottom_tab_title_inactive">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


